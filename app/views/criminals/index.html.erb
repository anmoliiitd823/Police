<p id="notice"><%= notice %></p>
<% if user_signed_in? %>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %> 
  <h1> Welcome , <%= current_user.email %> </h1>       
<% else %>
  <%= link_to('Login', new_user_session_path)  %>
  <h1>You need to Login to be able to access</h1>  
<% end %>





<br><br>
<h1>Criminals Record</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Second name</th>
      <th>Identification mark</th>
      <th>Location of crime</th>
      <th>Address</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Description</th>
      <th>Gender</th>
      <th>Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @criminals.each do |criminal| %>
      <tr>
        <td><%= criminal.first_name %></td>
        <td><%= criminal.second_name %></td>
        <td><%= criminal.identification_mark %></td>
        <td><%= criminal.location_of_crime %></td>
        <td><%= criminal.address %></td>
        <td><%= criminal.height %></td>
        <td><%= criminal.weight %></td>
        <td><%= criminal.description %></td>
        <td><%= criminal.gender %></td>
        <td><%= criminal.age %></td>
        <td><%= image_tag criminal.avatar.url(:thumb) %></td>
        <td><%= link_to 'Show', criminal %></td>
        <td><%= link_to 'Edit', edit_criminal_path(criminal) %></td>
        <td><%= link_to 'Destroy', criminal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

